<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:rowCount="8"
    android:columnCount="2"
    >

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"/>

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:text="No"
            android:onClick="checkButton"/>

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:text="Tip"
            android:onClick="checkButton"/>

        <RadioButton
        android:id="@+id/radio_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:text="Total"
        android:onClick="checkButton"/>



    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:background="@color/design_default_color_background"
        android:padding="8dp"
        android:text="@string/enter_amount"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/SeekBarTip"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_row="1"
        android:layout_column="1"
        android:max="100" />

    <TextView
        android:id="@+id/editText_Percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@color/design_default_color_background"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="8dp"
        android:text="@string/_0"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        tools:text="0%" />

    <TextView
        android:id="@+id/editText_Tip"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@color/design_default_color_background"
        android:text="@string/tip"
        android:labelFor="@+id/editText_BillAmount"
        android:padding="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewtipDisplay"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@color/design_default_color_background"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:text="17" />

    <TextView
        android:id="@+id/editText_Total"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/total"
        android:background="@color/design_default_color_background"
        android:padding="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewtotalDisplay"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@color/design_default_color_background"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:text="77.77" />

    <EditText
        android:id="@+id/editTextBillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/enter_amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="DuplicateSpeakableTextCheck" />


    <TextView
        android:id="@+id/AmountOfPeople"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@color/design_default_color_background"
        android:padding="8dp"
        android:text="@string/participants"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/RoundingOptions"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:padding="8dp"
        android:text="Rounding"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />


</GridLayout>
